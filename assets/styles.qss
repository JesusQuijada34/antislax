/* AntiSlax - Windows 11 UWP Optimized Theme */
/* Controles ajustados, tama침os correctos, efectos funcionales */

* {
    font-family: "Segoe UI", sans-serif;
    outline: none;
}

/* Main Window */
QMainWindow {
    background-color: #202020;
}

/* Custom Title Bar */
#customTitleBar {
    background: #2b2b2b;
    border: none;
    border-bottom: 1px solid #3d3d3d;
}

#titleLabel {
    color: #ffffff;
    font-size: 12px;
    font-weight: 400;
    padding: 0px;
}

/* Title Bar Buttons */
#titleBarMinimizeBtn, #titleBarMaximizeBtn, #titleBarRestoreBtn, #titleBarCloseBtn {
    background: transparent;
    border: none;
    color: #ffffff;
}

#titleBarMinimizeBtn:hover, #titleBarMaximizeBtn:hover, #titleBarRestoreBtn:hover {
    background: rgba(255, 255, 255, 0.1);
}

#titleBarCloseBtn:hover {
    background: #c42b1c;
}

#titleBarMinimizeBtn:pressed, #titleBarMaximizeBtn:pressed, #titleBarRestoreBtn:pressed {
    background: rgba(255, 255, 255, 0.05);
}

#titleBarCloseBtn:pressed {
    background: #a52313;
}

/* Central Widget */
#centralWidget {
    background-color: #202020;
}

/* Tab Widget */
QTabWidget::pane {
    border: 1px solid #2d2d2d;
    background: #1c1c1c;
    border-radius: 4px;
    padding: 8px;
    margin-top: 0px;
}

QTabBar {
    background: transparent;
}

QTabBar::tab {
    background: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    padding: 8px 14px;
    margin-right: 2px;
    color: #909090;
    font-size: 13px;
    min-width: 70px;
}

QTabBar::tab:selected {
    background: rgba(96, 205, 255, 0.1);
    border-bottom: 2px solid #60cdff;
    color: #ffffff;
}

QTabBar::tab:hover:!selected {
    background: rgba(255, 255, 255, 0.05);
    color: #e0e0e0;
}

/* Buttons - SMALLER SIZE */
QPushButton {
    background: #2d2d2d;
    border: 1px solid #3d3d3d;
    border-radius: 4px;
    padding: 4px 12px;
    color: #ffffff;
    font-size: 13px;
    min-height: 26px;
    max-height: 28px;
}

QPushButton:hover {
    background: #3d3d3d;
    border: 1px solid #60cdff;
}

QPushButton:pressed {
    background: #252525;
    border: 1px solid #4db8ff;
}

QPushButton:disabled {
    background: #252525;
    color: #606060;
    border: 1px solid #2d2d2d;
}

/* Success Button */
QPushButton#successButton {
    background: #0078d4;
    border: 1px solid #0078d4;
}

QPushButton#successButton:hover {
    background: #1084d8;
    border: 1px solid #60cdff;
}

QPushButton#successButton:pressed {
    background: #006cbe;
}

/* Danger Button */
QPushButton#dangerButton {
    background: #c42b1c;
    border: 1px solid #c42b1c;
}

QPushButton#dangerButton:hover {
    background: #d13527;
    border: 1px solid #ff4444;
}

QPushButton#dangerButton:pressed {
    background: #a52313;
}

/* Labels */
QLabel {
    color: #ffffff;
    font-size: 13px;
    background: transparent;
}

QLabel#headerLabel {
    font-size: 20px;
    font-weight: 600;
    color: #ffffff;
    padding: 12px 8px 8px 8px;
}

QLabel#subHeaderLabel {
    font-size: 15px;
    font-weight: 600;
    color: #60cdff;
    padding: 8px 4px 6px 4px;
}

/* List Widget */
QListWidget {
    background: #1c1c1c;
    border: 1px solid #2d2d2d;
    border-radius: 4px;
    padding: 4px;
    color: #ffffff;
    font-size: 13px;
}

QListWidget::item {
    padding: 8px;
    border-radius: 3px;
    margin: 1px 0px;
}

QListWidget::item:selected {
    background: rgba(96, 205, 255, 0.2);
    color: #ffffff;
}

QListWidget::item:hover {
    background: rgba(255, 255, 255, 0.08);
}

/* Text Edit */
QTextEdit, QPlainTextEdit {
    background: #1c1c1c;
    border: 1px solid #2d2d2d;
    border-radius: 4px;
    padding: 8px;
    color: #ffffff;
    font-size: 12px;
    font-family: "Consolas", monospace;
    line-height: 1.5;
}

/* Progress Bar - PROPER SIZE */
QProgressBar {
    border: 1px solid #2d2d2d;
    border-radius: 3px;
    background: #1c1c1c;
    text-align: center;
    color: #ffffff;
    font-size: 11px;
    height: 20px;
    min-height: 20px;
    max-height: 20px;
}

QProgressBar::chunk {
    background: #60cdff;
    border-radius: 2px;
}

/* Scroll Bar */
QScrollBar:vertical {
    background: transparent;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background: #3d3d3d;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: #60cdff;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: transparent;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background: #3d3d3d;
    border-radius: 6px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background: #60cdff;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Check Box */
QCheckBox {
    color: #ffffff;
    font-size: 13px;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #4d4d4d;
    border-radius: 3px;
    background: #1c1c1c;
}

QCheckBox::indicator:hover {
    border: 1px solid #60cdff;
}

QCheckBox::indicator:checked {
    background: #60cdff;
    border: 1px solid #60cdff;
}

/* Group Box */
QGroupBox {
    border: 1px solid #2d2d2d;
    border-radius: 4px;
    margin-top: 10px;
    padding-top: 10px;
    background: #1c1c1c;
    font-size: 13px;
    color: #ffffff;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 10px;
    padding: 2px 8px;
    color: #60cdff;
}

/* Status Bar */
QStatusBar {
    background: #2b2b2b;
    border-top: 1px solid #3d3d3d;
    color: #909090;
    font-size: 11px;
    padding: 4px 8px;
}

/* Tooltip */
QToolTip {
    background: #2d2d2d;
    color: #ffffff;
    border: 1px solid #3d3d3d;
    border-radius: 3px;
    padding: 6px 10px;
    font-size: 12px;
}

/* Message Box */
QMessageBox {
    background-color: #202020;
}

QMessageBox QLabel {
    color: #ffffff;
    font-size: 13px;
}

QMessageBox QPushButton {
    min-width: 80px;
}

