/* Accent Button */
QPushButton#successButton {
    background: #0078d4;
    border: 1px solid #0078d4;
    color: #ffffff;
}

QPushButton#successButton:hover {
    background: #1084d8;
    border: 1px solid #1084d8;
}

QPushButton#successButton:pressed {
    background: #006cbe;
    border: 1px solid #006cbe;
}

/* Danger Button */
QPushButton#dangerButton {
    background: #c42b1c;
    border: 1px solid #c42b1c;
    color: #ffffff;
}

QPushButton#dangerButton:hover {
    background: #d13527;
    border: 1px solid #d13527;
}

QPushButton#dangerButton:pressed {
    background: #a52313;
    border: 1px solid #a52313;
}

/* Labels */
QLabel {
    color: #ffffff;
    font-size: 13px;
    background: transparent;
}

QLabel#headerLabel {
    font-size: 24px;
    font-weight: 600;
    color: #ffffff;
    padding: 16px 8px 12px 8px;
}

QLabel#subHeaderLabel {
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    padding: 12px 4px 8px 4px;
}

/* List Widget - Windows 11 Style */
QListWidget {
    background: #1c1c1c;
    border: 1px solid #2d2d2d;
    border-radius: 4px;
    padding: 4px;
    color: #ffffff;
    font-size: 13px;
}

QListWidget::item {
    padding: 8px;
    border-radius: 4px;
    margin: 1px 0px;
}

QListWidget::item:selected {
    background: rgba(96, 205, 255, 0.15);
    color: #ffffff;
}

QListWidget::item:hover {
    background: rgba(255, 255, 255, 0.05);
}

/* Text Edit - Windows 11 Style */
QTextEdit, QPlainTextEdit {
    background: #1c1c1c;
    border: 1px solid #2d2d2d;
    border-radius: 4px;
    padding: 8px;
    color: #ffffff;
    font-size: 12px;
    font-family: "Cascadia Mono", "Consolas", monospace;
    line-height: 1.5;
}

/* Progress Bar - Windows 11 Style */
QProgressBar {
    border: 1px solid #2d2d2d;
    border-radius: 4px;
    background: #1c1c1c;
    text-align: center;
    color: #ffffff;
    font-weight: 400;
    font-size: 12px;
    height: 6px;
    max-height: 6px;
}

QProgressBar::chunk {
    background: #60cdff;
    border-radius: 3px;
}

/* Scroll Bar - Windows 11 Style */
QScrollBar:vertical {
    background: transparent;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background: #3d3d3d;
    border-radius: 6px;
    min-height: 30px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background: #4d4d4d;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background: transparent;
    height: 12px;
    border: none;
}

QScrollBar::handle:horizontal {
    background: #3d3d3d;
    border-radius: 6px;
    min-width: 30px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background: #4d4d4d;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* Check Box - Windows 11 Style */
QCheckBox {
    color: #ffffff;
    font-size: 13px;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border: 1px solid #4d4d4d;
    border-radius: 4px;
    background: #1c1c1c;
}

QCheckBox::indicator:hover {
    border: 1px solid #60cdff;
    background: #252525;
}

QCheckBox::indicator:checked {
    background: #60cdff;
    border: 1px solid #60cdff;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCBkPSJNMyA4TDcgMTJMMTMgNCIgc3Ryb2tlPSIjMDAwMDAwIiBzdHJva2Utd2lkdGg9IjIiIGZpbGw9Im5vbmUiIHN0cm9rZS1saW5lY2FwPSJyb3VuZCIgc3Ryb2tlLWxpbmVqb2luPSJyb3VuZCIvPjwvc3ZnPg==);
}

QCheckBox::indicator:checked:hover {
    background: #4db8ff;
    border: 1px solid #4db8ff;
}

/* Group Box - Windows 11 Style */
QGroupBox {
    border: 1px solid #2d2d2d;
    border-radius: 4px;
    margin-top: 12px;
    padding-top: 12px;
    background: #1c1c1c;
    font-weight: 600;
    font-size: 13px;
    color: #ffffff;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 12px;
    padding: 2px 8px;
    background: transparent;
    color: #ffffff;
}

/* Status Bar - Windows 11 Style */
QStatusBar {
    background: #2b2b2b;
    border-top: 1px solid #3d3d3d;
    color: #a0a0a0;
    font-size: 12px;
    padding: 4px 8px;
}

/* Tooltip - Windows 11 Style */
QToolTip {
    background: #2b2b2b;
    color: #ffffff;
    border: 1px solid #3d3d3d;
    border-radius: 4px;
    padding: 6px 10px;
    font-size: 12px;
}

/* Message Box - Windows 11 Style */
QMessageBox {
    background-color: #202020;
}

QMessageBox QLabel {
    color: #ffffff;
    font-size: 13px;
}

QMessageBox QPushButton {
    min-width: 80px;
}

/* Menu - Windows 11 Style */
QMenu {
    background-color: #2b2b2b;
    border: 1px solid #3d3d3d;
    padding: 4px;
    border-radius: 4px;
}

QMenu::item {
    padding: 6px 24px 6px 12px;
    color: #ffffff;
    font-size: 13px;
    border-radius: 4px;
}

QMenu::item:selected {
    background-color: rgba(255, 255, 255, 0.08);
}

QMenu::separator {
    height: 1px;
    background: #3d3d3d;
    margin: 4px 8px;
}
